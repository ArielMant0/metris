- var i = 1;

div(id='score-container')
    ol(class='score-list')
        each player in scores
            li(class='score-entry')
                span(id='score-name') #{i}. #{player.name}
                span(id='score-value') (#{player.score})
                span(id='score-game') #{player.game}
                span(id='score-date') #{player.date}
                - i++